/**
 * Update a score for a question
 *
 * @param   {Number}  value      voting value for question 
 * @param   {Number}  qestionId  The question id
 *
 * @return  {boolean}             success?
 */
exports.voteQuestion = async function(qestionId, value){
	let queryOne = `
	UPDATE votings v
	JOIN votings_questions_rel vq
	ON v.id = vq.voting_id  
	JOIN questions q
	ON q.id = vq.question_id 
	SET v.score = ? 
	WHERE q.id = ?`

	let queryTwo = `
	UPDATE questions q 
	JOIN votings_questions_rel vq
	ON q.id = vq.question_id  
	JOIN votings v
	ON v.id = vq.voting_id 
	SET q.score = q.score + v.score 
	WHERE q.id = ?`

	let [err, res] = await db.query(queryOne, [value, qestionId]);
	if(err) throw err;

	[err, res] = await db.query(queryTwo, qestionId);
	if(err) throw err;

	return !!res.changedRows;
}

/**
 * Update a score for an user
 *
 * @param   {Number}  value      voting value for user 
 * @param   {Number}  qestionId  The user id
 *
 * @return  {boolean}             success?
 */
exports.voteUser = async function(userId, value){
	let queryOne = `
	UPDATE votings v
	JOIN votings_user_rel uq
	ON v.id = uq.voting_id  
	JOIN user u
	ON u.id = uq.user_id 
	SET v.score = ? 
	WHERE u.id = ?`

	let queryTwo = `
	UPDATE user u  
	JOIN votings_user_rel uq
	ON u.id = uq.user_id  
	JOIN votings v
	ON v.id = uq.voting_id 
	SET u.score = u.score + ? 
	WHERE u.id = ?`

	let [err, res] = await db.query(queryOne, [value, userId]);
	if(err) throw err;

	[err, res] = await db.query(queryTwo, [value, userId]);
	if(err) throw err;

	return !!res.changedRows;
}